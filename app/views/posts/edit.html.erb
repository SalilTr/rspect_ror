

<h1>Edit Post</h1>

<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>

  <!-- Add any other attributes you want to edit -->

  <div>
    <%= f.submit 'Update Post' %>
  </div>
<% end %>

<%= link_to 'Back to Posts', posts_path %>
