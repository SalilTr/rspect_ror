<h1>New Post</h1>

<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :upload_Image %>
    <%= f.file_field :image %>
</div>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <%= f.label :author_id %>
  <%= f.text_area :author_id %>
</div>
  <%= f.submit 'Create Post' %>
<% end %>

<%= link_to 'Back', posts_path %>
